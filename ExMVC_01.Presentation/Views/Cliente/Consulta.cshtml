@model ExMVC_01.Presentation.Models.ClienteConsultaViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Consulta de clientes</h5>
<p>Relação de clientes cadastrados no sistema.</p>
<br />

@using (Html.BeginForm())
{
    <label>Nome do Cliente:</label>
    @Html.TextBoxFor(model => model.Nome,
         new
         {
             @class = "form-control col-md-6",
             @autocomplete = "off",
             @placeholder = "Ex: João da Silva"
         })
    <br />
    <input type="submit" value="Pesquisar Clientes"
           class="btn btn-success" />
}

<br />
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Nome do Cliente</th>
            <th>CPF</th>
            <th>Email</th>
            <th>Sexo</th>
            <th>Data de Criação</th>
            <th>Data da Última Alteração</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td> - </td>
            <td>
                <a href="#" class="btn btn-primary btn-sm">Editar</a>
                <a href="#" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="8">Quantidade de clientes: 0</td>
        </tr>
    </tfoot>
</table>