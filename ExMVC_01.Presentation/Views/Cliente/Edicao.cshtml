@model ExMVC_01.Presentation.Models.ClienteEdicaoViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <!-- campo oculto para armazenar o ID do Cliente -->
    @Html.HiddenFor(model => model.Id)
    <label>Nome do Cliente:</label>
    @Html.TextBoxFor(model => model.Nome,
         new
         {
             @class = "form-control col-md-4",
             @autocomplete = "off",
             @placeholder = "Ex: João Carlos"
         })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </span>
    <br />
    <label>Data de Nascimento:</label>
    @Html.TextBoxFor(model => model.DataNascimento,
         new
         {
             @class = "form-control col-md-4",
             @autocomplete = "off",
             @type = "date"
         })
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.DataNascimento)
    </span>

    <br />
    <label>Sexo:</label>
    <br />
    @Html.RadioButtonFor(model => model.Sexo, "F") <span>Feminino</span>
    @Html.RadioButtonFor(model => model.Sexo, "M") <span>Masculino</span>
    <br />
    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Sexo)
    </span>
    <br />

    <input type="submit" class="btn btn-primary" value="Salvar Alterações" />
}


